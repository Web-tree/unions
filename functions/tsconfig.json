{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@webtree/unions-common": ["node_modules/@webtree/unions-common/src"],
      "@webtree/unions-common/*": ["node_modules/@webtree/unions-common/src/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "lib": ["es2017"]
}
